{
  "name": "library-management-system",
  "version": "1.0.0",
  "description": "A modern web application for managing library books built with Node.js, Express, and MongoDB",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "devStart": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "setup": "npm install && echo 'Setup complete! Run npm run dev to start development server.'",
    "check": "npm run lint && npm run format:check"
  },
  "keywords": [
    "library",
    "management",
    "books",
    "nodejs",
    "express",
    "mongodb",
    "crud",
    "web-application",
    "ejs"
  ],
  "author": {
    "name": "Recep Furkan Akin",
    "url": "https://github.com/rfurkan37"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rfurkan37/library-management-system.git"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "method-override": "^3.0.0",
    "mongoose": "^8.0.2",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2"
  }
}
