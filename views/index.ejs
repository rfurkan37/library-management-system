<%- include('header', { title: 'Dashboard - Library Management System', currentPage: 'home' }) %>

<div class="hero-section" style="text-align: center; padding: 2rem 0; color: white;">
    <div class="hero-content animate-fade-in">
        <div style="font-size: 3rem; margin-bottom: 1rem;">
            <i class="fas fa-book-open"></i>
        </div>
        <h1 style="font-size: 2.5rem; margin-bottom: 1rem; font-weight: 700;">
            Library Management Dashboard
        </h1>
        <p style="font-size: 1.1rem; margin-bottom: 2rem; opacity: 0.9; max-width: 600px; margin-left: auto; margin-right: auto;">
            Manage books, track reservations, and serve customers with our modern library system.
        </p>
    </div>
</div>

<!-- Stats Dashboard -->
<div class="content-wrapper" style="padding: 2rem;">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 3rem;">
        <div class="stats-card">
            <div class="stats-icon">
                <i class="fas fa-book"></i>
            </div>
            <div class="stats-content">
                <h3><%= stats.totalBooks %></h3>
                <p>Total Books</p>
            </div>
        </div>
        
        <div class="stats-card">
            <div class="stats-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stats-content">
                <h3><%= stats.availableBooks %></h3>
                <p>Available Books</p>
            </div>
        </div>
        
        <div class="stats-card">
            <div class="stats-icon" style="background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="stats-content">
                <h3><%= stats.activeReservations %></h3>
                <p>Active Reservations</p>
            </div>
        </div>
        
        <div class="stats-card">
            <div class="stats-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stats-content">
                <h3><%= stats.overdueReservations %></h3>
                <p>Overdue Items</p>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div style="text-align: center; margin-bottom: 3rem;">
        <h2 style="font-size: 1.8rem; color: var(--gray-800); margin-bottom: 2rem;">Quick Actions</h2>
        <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
            <a href="/books" class="btn btn-primary">
                <i class="fas fa-books"></i>
                View All Books
            </a>
            <a href="/books/new" class="btn btn-secondary">
                <i class="fas fa-plus"></i>
                Add New Book
            </a>
            <a href="/reservations" class="btn btn-success">
                <i class="fas fa-calendar-alt"></i>
                Manage Reservations
            </a>
            <a href="/reservations/customers" class="btn btn-info">
                <i class="fas fa-users"></i>
                Customer Management
            </a>
        </div>
    </div>
</div>

<div class="content-wrapper">
    <div style="padding: 3rem;">
        <div style="text-align: center; margin-bottom: 3rem;">
            <h2 style="font-size: 2rem; color: var(--gray-800); margin-bottom: 1rem;">
                Features
            </h2>
            <p style="color: var(--gray-600); font-size: 1.1rem;">
                Everything you need to manage your library efficiently
            </p>
        </div>
        
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin-bottom: 3rem;">
            <div class="feature-card" style="text-align: center; padding: 2rem; border-radius: 12px; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; transform: translateY(0); transition: var(--transition);">
                <i class="fas fa-book" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.9;"></i>
                <h3 style="font-size: 1.3rem; margin-bottom: 1rem;">Book Management</h3>
                <p style="opacity: 0.9;">Add, edit, and delete books with comprehensive details including ISBN, author, and quantity tracking.</p>
            </div>
            
            <div class="feature-card" style="text-align: center; padding: 2rem; border-radius: 12px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; transform: translateY(0); transition: var(--transition);">
                <i class="fas fa-search" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.9;"></i>
                <h3 style="font-size: 1.3rem; margin-bottom: 1rem;">Easy Search</h3>
                <p style="opacity: 0.9;">Quickly find books by title, author, or ISBN with our intuitive search functionality.</p>
            </div>
            
            <div class="feature-card" style="text-align: center; padding: 2rem; border-radius: 12px; background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%); color: var(--gray-800); transform: translateY(0); transition: var(--transition);">
                <i class="fas fa-chart-bar" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.8;"></i>
                <h3 style="font-size: 1.3rem; margin-bottom: 1rem;">Track Inventory</h3>
                <p style="opacity: 0.8;">Monitor book quantities and registration dates to keep your library organized.</p>
            </div>
        </div>
        
        <div style="text-align: center; padding: 2rem; background: var(--gray-100); border-radius: 12px;">
            <h3 style="color: var(--gray-800); margin-bottom: 1rem;">Ready to get started?</h3>
            <p style="color: var(--gray-600); margin-bottom: 1.5rem;">Begin managing your library collection today</p>
            <a href="/books/new" class="btn btn-primary">
                <i class="fas fa-rocket"></i>
                Add Your First Book
            </a>
        </div>
    </div>
</div>

<style>
    .feature-card:hover {
        transform: translateY(-5px) !important;
        box-shadow: var(--shadow-hover);
    }
    
    @media (max-width: 768px) {
        .hero-content h1 {
            font-size: 2rem !important;
        }
        .hero-content p {
            font-size: 1rem !important;
        }
        .hero-content .btn {
            font-size: 1rem !important;
            padding: 0.75rem 1.5rem !important;
        }
    }
</style>

<%- include('footer') %>