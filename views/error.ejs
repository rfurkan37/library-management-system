<%- include('header', { title: 'Error - Library Management System', currentPage: '' }) %>
<div style="display: flex; align-items: center; justify-content: center; min-height: 60vh; padding: 2rem;">
    <div class="content-wrapper" style="max-width: 600px; text-align: center;">
        <div style="padding: 3rem 2rem;">
            <div style="background: linear-gradient(135deg, var(--error-color), var(--warning-color)); width: 100px; height: 100px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 2rem;">
                <i class="fas fa-exclamation-triangle" style="font-size: 3rem; color: white;"></i>
            </div>
            
            <h1 style="color: var(--gray-800); margin-bottom: 1rem; font-size: 2rem;">
                Oops! Something went wrong
            </h1>
            
            <div style="background: var(--gray-100); border-left: 4px solid var(--error-color); padding: 1.5rem; border-radius: 8px; margin-bottom: 2rem; text-align: left;">
                <div style="display: flex; align-items: start; gap: 0.75rem;">
                    <i class="fas fa-info-circle" style="color: var(--error-color); margin-top: 0.2rem;"></i>
                    <div>
                        <h3 style="color: var(--gray-800); margin: 0 0 0.5rem 0; font-size: 1rem;">Error Details</h3>
                        <p style="color: var(--gray-600); margin: 0; line-height: 1.5;"><%= error %></p>
                    </div>
                </div>
            </div>
            
            <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                <a href="/books" class="btn btn-primary">
                    <i class="fas fa-books"></i>
                    Back to Books
                </a>
                <a href="/" class="btn btn-secondary">
                    <i class="fas fa-home"></i>
                    Go Home
                </a>
            </div>
            
            <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid var(--gray-300);">
                <h3 style="color: var(--gray-800); margin-bottom: 1rem;">What can you do?</h3>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; text-align: left;">
                    <div style="background: rgba(102, 126, 234, 0.1); padding: 1rem; border-radius: 8px;">
                        <i class="fas fa-refresh" style="color: var(--primary-color); margin-bottom: 0.5rem;"></i>
                        <h4 style="margin: 0 0 0.5rem 0; color: var(--gray-800);">Try Again</h4>
                        <p style="margin: 0; color: var(--gray-600); font-size: 0.9rem;">Go back and try your action again</p>
                    </div>
                    <div style="background: rgba(72, 187, 120, 0.1); padding: 1rem; border-radius: 8px;">
                        <i class="fas fa-question-circle" style="color: var(--success-color); margin-bottom: 0.5rem;"></i>
                        <h4 style="margin: 0 0 0.5rem 0; color: var(--gray-800);">Check Input</h4>
                        <p style="margin: 0; color: var(--gray-600); font-size: 0.9rem;">Verify your input data is correct</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
    }
    
    .content-wrapper {
        animation: fadeInUp 0.6s ease-out;
    }
    
    .content-wrapper:hover {
        animation: shake 0.5s ease-in-out;
    }
</style>

<%- include('footer') %>